<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    tools:context=".activities.KuWriteActivity">

    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ku_card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:padding="16dp"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/ku_content1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="24dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="This is the first line"
                />
            <TextView
                android:id="@+id/ku_content2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@id/ku_content1"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="This is the second line son"
                />
            <TextView
                android:id="@+id/ku_content3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@id/ku_content2"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="24dp"
                android:text="This is the third line"

                />

            <ImageButton
                android:id="@+id/upvoteButton"
                android:layout_width="30dp"
                android:layout_height="24dp"
                android:paddingTop="16dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/upvote"
                />
            <TextView
                android:id="@+id/ku_karma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/upvoteButton"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:text="125"
                />
            <ImageButton
                android:id="@+id/downvoteButton"
                android:layout_width="30dp"
                android:layout_height="24dp"
                android:layout_below="@id/ku_karma"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/downvote"
                />
            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/empty_star"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>